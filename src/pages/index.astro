        <Card slot="card2" imagen="../../public/section-1/calidadPrecio.png" txt="Buena relación calidad/precio" ident="calidad-precio" />

        <Card slot="card3" imagen="../../public/section-1/noImportaLaCalidad.png" txt="No me importa tanto la calidad" ident="no-import-calidad" />

    </Question1> 
    <Footer />
    <MoreInfor />
   
</Layout>

